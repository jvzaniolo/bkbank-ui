{
  "name": "@bkbank/ui",
  "version": "1.2.0-beta.1",
  "description": "The Bk Bank Design System written as a TailwindCSS Plugin",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all tsc --parallel build:**",
    "tsc": "tsc",
    "build:all": "postcss --config packages packages/core/all.css --dir dist --base packages",
    "build:base": "postcss --config packages packages/core/base.css --dir dist --base packages",
    "build:components": "postcss --config packages packages/core/components.css --dir dist --base packages",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jvzaniolo/bkbank-ui.git"
  },
  "keywords": [
    "tailwindcss",
    "plugin",
    "design-system"
  ],
  "author": "joao.zaniolo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jvzaniolo/bkbank-ui/issues"
  },
  "homepage": "https://github.com/jvzaniolo/bkbank-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-actions": "^7.0.0-beta.55",
    "@storybook/addon-essentials": "^7.0.0-beta.55",
    "@storybook/addon-interactions": "^7.0.0-beta.55",
    "@storybook/addon-links": "^7.0.0-beta.55",
    "@storybook/html": "^7.0.0-beta.55",
    "@storybook/html-vite": "^7.0.0-alpha.58",
    "@storybook/testing-library": "0.0.14-next.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/postcss-js": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "autoprefixer": "^10.4.13",
    "clsx": "^1.2.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-storybook": "^0.6.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^20.1.0",
    "storybook": "7.0.0-beta.54",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  },
  "dependencies": {
    "@fontsource/montserrat": "^4.5.14",
    "postcss-js": "^4.0.1",
    "tailwindcss": "^3.2.7"
  },
  "peerDependencies": {
    "typescript": "^4.9.5"
  }
}
