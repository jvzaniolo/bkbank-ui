{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".eslintrc.json", ".prettierrc"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "dev": {
      "cache": false
    },
    "docs": {
      "cache": false
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "release": {
      "dependsOn": ["^build"]
    }
  }
}
